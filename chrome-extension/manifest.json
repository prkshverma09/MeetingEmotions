{
  "manifest_version": 3,
  "name": "Meeting Emotions Overlay",
  "version": "1.0.0",
  "description": "Capture the current tab, send to API for emotion detection, and overlay the result on the page.",
  "action": {
    "default_title": "Analyze Emotion",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ]
}


